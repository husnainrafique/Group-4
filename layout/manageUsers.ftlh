<body>
    <header class="header">
        <h1>ğŸ“Š Admin Dashboard - HandMeDowns</h1>
        <p><a href="home.html" class="home-btn">Home</a> | <a href="admin.html" class="home-btn">Return</a> | Logout</p>
    </header>

    <section class="admin-panel">
        <h2>âš™ï¸ Admin Controls</h2>


        <div class="admin-section">
            <h3>ğŸ‘¤ Manage Users</h3>

            <form action="placeholder" method="placeholder" class="admin-form">
                <label for="user-name">Username:</label>
                <input type="text" id="user-name" name="username" required>

                <label for="user-email">Email:</label>
                <input type="email" id="user-email" name="email" required>

                <button type="submit" class="add-user-btn">Add New User</button>
            </form>

            <form action="placeholder" method="placeholder" class="admin-form">
                <label for="ban-username">Username:</label>
                <input type="text" id="ban-username" name="username" required>

                <button type="submit" class="ban-user-btn">Ban User</button>
            </form>
        </div>

        <h3>ğŸ‘¥ Manage User Permissions</h3>

        <form action="placeholder" method="placeholder" class="admin-form">
            <label for="user-name">Username:</label>
            <input type="text" id="user-name" name="username" required>

            <label for="user-perms">Status:</label>
                <select id="user-perms" name="user-permss">
                    <option value="customer">Customer</option>
                    <option value="provider">Provider</option>
                    <option value="sysadmin">Admin</option>
                </select>

            <button type="submit" class="user_perm">Add New User</button>
        </form>



        

        
    

   

